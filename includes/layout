# Page content

function page_header {
	print -r -- '<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="generator" content="wswsh">'
	#if (( WSH_CSS == 1 )); then
		#print -r -- "	<link rel=\"stylesheet\" type=\"text/css\" href=\"/${WSH_CSSFILE}\" />"
	#fi
	print -r -- "	<link rel=\"stylesheet\" type=\"text/css\" href=\"${WSH_CSSFILE}\">"
	if [[ -n $WSH_TITLE ]]; then
		print -r -- "	<title>${WSH_TITLE}${WSH_GENFILE_TITLE:+ | $WSH_GENFILE_TITLE}</title>"
	else
		print -r -- "	<title>${WSH_GENFILE_TITLE}</title>"
	fi
	print -r -- '</head>
<body>
    <header>'
        print -r -- "<div align=right><code>"
        print -r -- "<a href=\"${HOME}\">Home</a> &emsp;"
        print -r -- "<a href=\"${ABOUT}\">About</a> &emsp;"
        print -r -- "<a href=\"${SOURCE}\">Source</a> &emsp;"
	print -r -- "<a href=\"${SEEALSO}\">See Also</a>"
    print -r -- '</div>'
    print -r -- '<pre>______________________________________________________________________________________________________</pre><br>'
    print -r -- '<code><header>'
}

function page_footer {
    print -r -- '<pre>______________________________________________________________________________________________________</pre>'
	print -r -- '<footer align="center"><code> Page generated by <a href=\"https://github.com/Ypnose/wswsh\">wswsh</a> / '"${SHELL##*/}"' - '"$(LC_ALL=C date -u)"'</code><footer>
</body>
</html>'
}
