# Page content

function page_header {
	print -r -- '<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="generator" content="wswsh">'
	#if (( WSH_CSS == 1 )); then
		#print -r -- "	<link rel=\"stylesheet\" type=\"text/css\" href=\"/${WSH_CSSFILE}\" />"
	#fi
	print -r -- "	<link rel=\"stylesheet\" type=\"text/css\" href=\"${WSH_CSSFILE}\">"
	if [[ -n $WSH_TITLE ]]; then
		print -r -- "	<title>${WSH_TITLE}${WSH_GENFILE_TITLE:+ | $WSH_GENFILE_TITLE}</title>"
	else
		print -r -- "	<title>${WSH_GENFILE_TITLE}</title>"
	fi
	print -r -- '</head>
<body>
    <header>'
        print -r -- "<div class=\"new2\"><span class=\"toleft\"><code>Icaro's website</code></span>"
        print -r -- "<span class=\"toright\"><code>"
        print -r -- "<a href=\"${HOME}\">Home</a> &emsp;"
        print -r -- "<a href=\"${ABOUT}\">About</a> &emsp;"
        print -r -- "<a href=\"${SOURCE}\">Source</a> &emsp;"
	    print -r -- "<a href=\"${SEEALSO}\">See Also</a></code>"
    print -r -- '</span>'
    print -r -- "</div>"
    print -r -- '<hr>'
    print -r -- '<code><header>'
}

function page_footer {
    print -r -- '<br><hr>'
	print -r -- '<footer align="center"><code> Page generated by <a href="https://github.com/Ypnose/wswsh" target="_blank">wswsh</a> / '"${SHELL##*/}"' - '"$(LC_ALL=C date -u)"'</code><footer>
</body>
</html>'
}
